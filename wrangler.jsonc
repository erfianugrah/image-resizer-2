		"AUTH_DOMAIN_SECURE": "secure.example.com",
		"AUTH_DOMAIN_BASIC": "basic-auth.example.com",
		"AUTH_DOMAIN_API": "api.example.com",
		"AUTH_DOMAIN_SIGNED": "signed.example.com",
