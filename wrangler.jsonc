		"DEFAULT_QUALITY": "80",
		"DEFAULT_FIT": "scale-down",
		"USER_AGENT": "Cloudflare-Image-Resizer/1.0-DEV",
		/* Path transformations for all storage types */
		"PATH_TRANSFORMS": {
			"images": {
				"prefix": "",
				"removePrefix": true
			},
			"assets": {
				"prefix": "img/",
				"removePrefix": true,
